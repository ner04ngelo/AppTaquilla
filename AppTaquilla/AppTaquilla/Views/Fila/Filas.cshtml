@model IEnumerable<AppTaquilla.Models.Fila>

@{
    ViewBag.Title = "Filas";
}

<h2>Filas</h2>

<p>
    @Html.ActionLink("Agregar Fila", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("ID")
        </th>
        <th>
            @Html.Label("Sala")
        </th>
        <th>
            @Html.Label("Letra")
        </th>
        <th>
            @Html.Label("Asientos")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fila_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sala.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.fila_id}) |
            <!-- @Html.ActionLink("Details", "Details", new {id=item.fila_id}) |-->
            @Html.ActionLink("Delete", "Delete", new {id=item.fila_id})
        </td>
    </tr>
}

</table>
